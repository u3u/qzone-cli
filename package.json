{
  "name": "qzone-cli",
  "version": "0.0.1",
  "description": "üõ†Ô∏è CLI for qzone-api",
  "repository": {
    "url": "u3u/qzone-cli",
    "type": "git"
  },
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "bin",
    "lib",
    "types"
  ],
  "scripts": {
    "test:cov": "jest --coverage && npm run lint",
    "test": "npm run lint && jest",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "format": "prettier \"*/**/*.js\" \"bin/**\" --ignore-path ./.prettierignore --write",
    "prettier": "npm run format && npm run lint:fix && git status"
  },
  "author": "u3u <quq@quq.cat>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "cac": "^4.3.1",
    "chalk": "^2.3.0",
    "download": "^6.2.5",
    "inquirer": "^5.0.0",
    "md5": "^2.2.1",
    "ora": "^1.3.0",
    "progress": "^2.0.0",
    "qzone-api": "^0.0.5"
  },
  "devDependencies": {
    "@types/download": "^6.2.1",
    "@types/inquirer": "^0.0.36",
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/ora": "^1.3.1",
    "@types/progress": "^2.0.1",
    "eslint-config-rem": "^4.0.0",
    "jest-cli": "^22.0.5",
    "pre-commit": "^1.2.2",
    "prettier": "^1.9.2",
    "xo": "^0.18.0"
  },
  "pre-commit": [
    "prettier"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "xo": {
    "extends": "rem",
    "prettier": true,
    "envs": [
      "node",
      "browser",
      "jest"
    ],
    "rules": {
      "no-unused-vars": 1,
      "operator-linebreak": 0,
      "space-before-function-paren": 0
    }
  }
}
